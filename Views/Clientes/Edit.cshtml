@model ProjetoSupermercado.Models.Cliente

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center">Editar Cliente</h1>
    <h4 class="text-center">Atualize as informações do Cliente</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />

                <div class="form-group mb-3">
                    <label asp-for="nome" class="control-label"></label>
                    <input asp-for="nome" class="form-control" placeholder="Nome do Cliente" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="cpf" class="control-label"></label>
                    <input asp-for="cpf" class="form-control" placeholder="CPF" />
                    <span asp-validation-for="cpf" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="telefone" class="control-label"></label>
                    <input asp-for="telefone" class="form-control" placeholder="Telefone" />
                    <span asp-validation-for="telefone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
