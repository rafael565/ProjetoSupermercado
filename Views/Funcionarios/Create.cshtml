@model ProjetoSupermercado.Models.Funcionario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center">Criar Novo Funcionário</h1>
    <h4 class="text-center">Preencha as informações abaixo:</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="nome" class="form-label"></label>
                    <input asp-for="nome" class="form-control" placeholder="Nome do Funcionário" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="cpf" class="form-label"></label>
                    <input asp-for="cpf" class="form-control" placeholder="CPF" />
                    <span asp-validation-for="cpf" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="cargoID" class="form-label"></label>
                    <select asp-for="cargoID" class="form-control" asp-items="ViewBag.cargoID">
                        <option value="">Selecione um Cargo</option>
                    </select>
                    <span asp-validation-for="cargoID" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <input type="submit" value="Criar Funcionário" class="btn btn-success btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
