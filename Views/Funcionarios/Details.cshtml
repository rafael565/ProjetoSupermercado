@model ProjetoSupermercado.Models.Funcionario

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center">Detalhes do Funcionário</h1>

    <div>
        <h4>Funcionário</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.cpf)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.cpf)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.cargo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.cargo.nome)
            </dd>
        </dl>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-primary">Editar</a> |
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </div>
</div>
