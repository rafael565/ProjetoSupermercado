@model IEnumerable<ProjetoSupermercado.Models.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Lista de Produtos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar Novo Produto</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.validade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.quantidade)
                </th>

                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.validade)  
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.quantidade)
                    </td>
                    <td class="text-center">
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.id">Editar</a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.id">Detalhes</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
